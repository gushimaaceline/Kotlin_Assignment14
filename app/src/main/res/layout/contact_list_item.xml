<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvContact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#F8CC8B"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="276dp">

        <TextView
            android:id="@+id/tvContacts"
            android:layout_width="92dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:text="Contact Book"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.433"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="113dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="Personal Details"
            android:textAlignment="center"
            android:textColor="#0B0B0B"
            app:layout_constraintBottom_toTopOf="@+id/tvName"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/tvContacts" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="51dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:text="Name:"
            android:textAlignment="center"
            android:textColor="#171717"
            app:layout_constraintStart_toEndOf="@+id/imgContact"
            app:layout_constraintTop_toBottomOf="@+id/tvDetails" />

        <TextView
            android:id="@+id/tvPersonName"
            android:layout_width="111dp"
            android:layout_height="20dp"
            android:text="Pamela Umutoni"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/tvName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tvName"
            app:layout_constraintTop_toTopOf="@+id/tvName"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="51dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:text="Phone:"
            android:textAlignment="center"
            android:textColor="#101010"
            app:layout_constraintStart_toEndOf="@+id/imgContact"
            app:layout_constraintTop_toBottomOf="@+id/tvMail" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="113dp"
            android:layout_height="20dp"
            android:text="+250781405420"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/imgContact"
            app:layout_constraintStart_toEndOf="@+id/tvPhone"
            app:layout_constraintTop_toTopOf="@+id/tvPhone"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvMail"
            android:layout_width="51dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:text="Email:"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            app:layout_constraintStart_toEndOf="@+id/imgContact"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="umutoni@gmail.com"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/tvMail"
            app:layout_constraintStart_toEndOf="@+id/tvMail"
            app:layout_constraintTop_toTopOf="@+id/tvMail"
            app:layout_constraintVertical_bias="0.333" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvDetails"
            app:srcCompat="@drawable/ic_baseline_import_contacts_24" />

        <ImageView
            android:id="@+id/imgContact"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPhone"
            app:layout_constraintEnd_toStartOf="@+id/tvMail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvName"
            app:layout_constraintVertical_bias="0.533"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>